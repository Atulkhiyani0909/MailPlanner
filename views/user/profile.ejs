<%layout("/layout/boilerplate")%>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

<style>
  body {
    font-family: 'Arial', sans-serif;
    background-color: #f1f5f9; /* Soft gray-blue background for modern appeal */
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }

  .profile-container {
    display: flex;
    margin: auto;
    flex-direction: column;
    align-items: center;
    width: 90%;
    max-width: 700px;
    padding: 10px;
    background: linear-gradient(135deg, #ffffff, #f8f9fa);
    border-radius: 12px;
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
  }

  .profile-image img {
    width: 150px;
    margin-top: 50px;
    height: 150px;
    border-radius: 50%;
    border: 4px solid #007bff;
    margin-bottom: 12px;
    object-fit: cover;
  }

  .profile-details h1 {
    font-size: 28px;
    color: #343a40;
    margin-bottom: 10px;
  }

  .profile-details p {
    font-size: 16px;
    color: #495057;
    margin: 5px 0;
  }

  .detail-label {
    font-weight: bold;
    color: #007bff;
  }

  .password-container {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 15px;
    gap: 10px;
  }

  .hidden-password p {
    font-size: 16px;
    color: #495057;
    margin: 0;
    padding: 5px 10px;
    background-color: #f1f1f1;
    border-radius: 6px;
    border: 1px solid #ced4da;
  }

  .view-btn {
    padding: 8px 16px;
    font-size: 14px;
    color: #ffffff;
    background-color: #007bff;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .view-btn:hover {
    background-color: #0056b3;
    box-shadow: 0 4px 8px rgba(0, 123, 255, 0.3);
  }

  .profile-stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
    margin-top: 20px;
    width: 100%;
    text-align: center;
  }

  .profile-stat {
    background-color: #e9ecef;
    padding: 15px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
    font-size: 16px;
    font-weight: bold;
    color: #495057;
  }

  .profile-stat span {
    display: block;
    font-size: 14px;
    font-weight: normal;
    color: #6c757d;
  }

  @media (max-width: 576px) {
    .profile-container {
      padding: 20px;
    }

    .profile-details h1 {
      font-size: 24px;
    }

    .profile-details p {
      font-size: 14px;
    }

    .view-btn {
      font-size: 12px;
      padding: 6px 10px;
    }

    .profile-stat {
      font-size: 14px;
    }
  }
  .upload-container {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            width: 50%;
            font-size: 30px;
            max-width: 300px;
        }

        

        .upload-container input[type="file"] {
            display: none;
        }

        .upload-container label {
            display: inline-block;
            width: 9rem;
            height: 2.5rem;
            
            padding: 10px 20px;
            font-size: 1rem;
            color: #fff;
            background-color: #007bff;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .upload-container label:hover {
            background-color: #0056b3;
        }

        .upload-container button {
            margin-top: 15px;
            width: 12rem;
            height: 2.5rem;
            padding: 10px 20px;
            font-size: 1rem;
            color: #fff;
            background-color: #28a745;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .upload-container button:hover {
            background-color: #218838;
        }

        @media (max-width: 480px) {
            .upload-container h1 {
                font-size: 1.25rem;
            }

            .upload-container label,
            .upload-container button {
                font-size: 0.9rem;
                padding: 8px 15px;
            }
        }
</style>

<div class="row row-cols-lg-4 row-cols-md-4 row-cols-sm- m-4 mt-3">
  <div class="profile-image">
    <img src="/images/uploads/<%=user.profilepic%>" alt="Profile Image">
  </div>
  
  <div class="upload-container">
    <form action="/upload" method="post" enctype="multipart/form-data">
        <input type="file" id="file" name="file" required>
        <label for="file">Choose File</label>
        <br>
        <button type="submit">Upload Profile Image</button>
    </form>
</div>
<br>

  <div class="profile-details">
    <br>
   <h3> <span class="detail-label">User: </span><%=user.user%></h3>
    <p><span class="detail-label">Email:</span> <%=user.email%></p>

    <div class="password-container">
      <div class="hidden-password" id="hidden-section" style="display:none;">
        <p><%=user.password%></p>
      </div>
      <button class="view-btn" id="show-btn">Show Password</button>
    </div>

    <div class="profile-stats">
      <div class="profile-stat">
        <%=count.length%> <span>Total Emails Sent</span>
      </div>
      <div class="profile-stat">
        <%=pendingCount%> <span>Pending Mails</span>
      </div>
      <div class="profile-stat">
        <%=deliveredCount%> <span>Delivered Mails</span>
      </div>
    </div>
  </div>
</div>

<script>
  const button = document.getElementById('show-btn');
  const hiddenSection = document.getElementById('hidden-section');

  button.addEventListener('click', () => {
    if (hiddenSection.style.display === 'none' || hiddenSection.style.display === '') {
      hiddenSection.style.display = 'block'; // Show the password
      button.textContent = 'Hide Password';  // Update button text
    } else {
      hiddenSection.style.display = 'none'; // Hide the password
      button.textContent = 'Show Password';  // Update button text
    }
  });
</script>
