<%layout("/layout/boilerplate")%>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

<br>
<div class="row row-cols-lg-4 row-cols-md-4 row-cols-sm- m-4 mt-3">
<% for(let allmail of allmails){ %>
<div class="card shadow-lg m-1" style="width: 22rem; border-radius: 20px;">
    <div class="card-body">
     
     
      <p class="card-text"><b>Subject : </b><%=allmail.Subject%></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item"><b>To : </b><%=allmail.to%></li>
      <li class="list-group-item"><b>Date Send : </b><%=allmail.dateCreated.toString().substring(0,24)%></li>
      <li class="list-group-item"><b>Sending Time : </b><%=allmail.sendingTime.toString().substring(0,24)%> </li>
    </ul>
    <div class="card-body">
      <a href="/mail/<%=allmail._id%>" class="card-link">Open Mail</a>
    </div>
  </div>

  <% } %>
</div>
  <script src="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>