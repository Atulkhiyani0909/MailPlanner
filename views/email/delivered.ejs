<%layout("/layout/boilerplate")%>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

<div class="row row-cols-lg-4 row-cols-md-4 row-cols-sm- m-4">
<% for(let allmail of allmails){ %>
  <div class="card shadow-lg m-1" style="width: 22rem; border-radius: 20px;">
    <div class="card-body">
      <% if( allmail.sendingTime.toISOString() > new Date().toISOString()) { %>
        <p><b>Pending</b> <i class="fa-solid fa-hourglass-start"></i></p>
    <% } else { %>
        <p><b>Delivered</b> <i class="fa-solid fa-check"></i></p>
    <% } %>
      <h5 class="card-title text-primary">Mail Status : <i>Delivered</i></h5>
      <p class="card-text">Subject : <%=allmail.Subject%></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">To : <%=allmail.to%></li>
      <li class="list-group-item">Date Send : <%=allmail.dateCreated.toString().substring(0,24)%> </li>
      <li class="list-group-item">Sending Time : <%=allmail.sendingTime.toString().substring(0,24)%> </li>
    </ul>
    <div class="card-body">
      <a href="/mail/<%=allmail.id%>" class="card-link">Open Mail</a>
    </div>
  </div>

  <% } %>
</div>
  <script src="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>