<%layout("/layout/boilerplate")%>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
<style>
  body {
    background-color: #f9f9f9;
    font-family: 'Arial', sans-serif;
  }

  h1 {
    text-align: center;
    margin-top: 20px;
    color: #007bff;
  }

  .card {
    border-radius: 15px;
    overflow: hidden;
    margin-bottom: 20px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease-in-out;
  }

  .card:hover {
    transform: translateY(-5px);
  }

  .card-body {
    padding: 20px;
  }

  .failed-status {
    color: red;
    font-weight: bold;
  }

  .fa-circle-exclamation {
    color: red;
    margin-left: 5px;
  }

  .card-text {
    font-size: 14px;
    color: #495057;
    margin-bottom: 10px;
  }

  .card-link {
    font-size: 16px;
    color: #007bff;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .card-link:hover {
    color: #0056b3;
  }

 
  
</style>

<h1>History</h1>
<br>
<div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 m-4 mt-3">
  <% for(let allmail of allmails){ %>
    <div class="col mb-4">
      <div class="card shadow-lg">
        <div class="card-body">
          <p class="failed-status"><b>Failed</b> <i class="fa-solid fa-circle-exclamation"></i></p>
          <p class="card-text"><b>Subject: </b><%=allmail.Subject%></p>
          <p class="card-text"><b>From: </b><%=allmail.from%></p>
          <p class="card-text"><b>To: </b><%=allmail.to%></p>
          <p class="card-text"><b>Date Created: </b><%=allmail.dateCreated.toString().substring(0,24)%></p>
          <p class="card-text"><b>Sending Time: </b><%=allmail.sendingTime.toString().substring(0,24)%></p>
        </div>
        <div class="card-body">
          <a href="/mail/<%=allmail.id%>" class="card-link">Open Mail</a>
        </div>
      </div>
    </div>
  <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
