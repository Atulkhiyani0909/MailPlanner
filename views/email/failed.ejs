<%layout("/layout/boilerplate")%>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
<h1 style="display:hidden;">history</h1>
<div class="row row-cols-lg-4 row-cols-md-4 row-cols-sm- m-4 mt-3">
<% for(let allmail of allmails){ %>
  <div class="card shadow-lg m-1" style="width: 22rem; border-radius: 20px;">
   <div class="card-body">
   
      <p style="color: red;"><b>Failed</b> <i class="fa-solid fa-circle-exclamation"></i></i></p>
 
      <p class="card-text"><b>Subject : </b><%=allmail.Subject%></p>
      <p class="card-text"><b>From : </b><%=allmail.from%></p>
      <p class="card-text"><b>To : </b><%=allmail.to%></p>
      <p class="card-text"><b>Date Created : </b><%=allmail.dateCreated.toString().substring(0,24)%></p>
      <p class="card-text"><b>Sending Time : </b><%=allmail.sendingTime.toString().substring(0,24)%></p>
    </div>
    <div class="card-body">
      <a href="/mail/<%=allmail.id%>" class="card-link">Open Mail</a>
    </div>
  </div>

  <% } %>
</div>
  <script src="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>