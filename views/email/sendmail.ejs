<%layout("/layout/boilerplate")%>

<link rel="stylesheet" href="css/send.css">

<div id="form-container" class="container mt-5">
    <div class="card shadow-lg mx-auto" style="max-width: 900px;">
        <div class="card-header bg-primary text-white text-center">
            <h1 class="h4 mb-0">Send an Email</h1>
        </div>
        <div class="card-body">
            <form id="email-form" action="/mail" method="post" enctype="multipart/form-data">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="to" class="form-label">To:</label>
                        <input type="email" id="to" name="to" class="form-control"  placeholder="Enter recipient's email">
                    </div>
                    
                    <div class="col-md-6">
                        <label for="csvfile" class="form-label">Attach CSV File (optional):</label>
                        <div class="input-group">
                            <input type="file" id="csvfile" name="csvfile" class="form-control">
                        </div>
                    </div>
                    <br>
                    <div class="col-md-6">
                        <label for="subject" class="form-label">Subject:</label>
                        <input type="text" id="subject" name="subject" class="form-control" required placeholder="Enter email subject">
                    </div>
                </div>

                <div class="mb-3">
                    <label for="body" class="form-label">Body:</label>
                    <textarea id="body" name="body" class="form-control" rows="5" required placeholder="Enter your message"></textarea>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="sendingDate" class="form-label">Sending Date:</label>
                        <input type="datetime-local" id="sendingDate" name="sendingDate" class="form-control" required>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100">Send Email</button>
            </form>
        </div>
    </div>
</div>

<!-- AI Circle -->
<div id="ai-circle" onclick="toggleAIBox()">AI</div>

<!-- AI Prompt Box -->
<div id="ai-box" class="shadow-lg">
    <h2>Generate with AI</h2>
    <form onsubmit="handleFormSubmit(event)">
        <div class="mb-3">
            <label for="ai-topic" class="form-label">Topic or Keywords:</label>
            <input type="text" id="ai-topic" name="topic" class="form-control" placeholder="Enter topic or keywords">
        </div>
        <button type="submit" class="btn btn-success w-100">Generate</button>
    </form>
    <div class="generated">
        <div id="loader">Generating With AI ...</div>
        <h3 id="generated-heading" class="mt-3"></h3>
        <p id="generated-msg"></p>
    </div>
</div>


<script src="js/main.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
